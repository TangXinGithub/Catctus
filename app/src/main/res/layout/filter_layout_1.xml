<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:layout_height="@dimen/sheet_peek_height"
              android:layout_gravity="bottom"
              android:orientation="vertical"
              android:padding="@dimen/filter_layout_padding"
              tools:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">
<!--            app:srcCompat="@drawable/ic_pill"
            app:tint="@color/filter_pill_color"  着色器 -->
        <ImageView
            android:id="@+id/filter_pill_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="3dp"
        />

        <ImageView
            android:id="@+id/filter_pill_2"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/filter_pill_3Word"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            />

        <ImageView
            android:id="@+id/filter_pill_4"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/filter_pill_5"
            android:layout_width="120dp"
            android:layout_height="48dp"
           />

        <ImageView
            android:id="@+id/filter_pill_6"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            />
    </LinearLayout>
</LinearLayout>