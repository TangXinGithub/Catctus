<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_height="match_parent">

    <com.ramotion.foldingcell.FoldingCell
        android:id="@+id/folding_cell2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        folding-cell:additionalFlipsCount="2"
        folding-cell:animationDuration="1000"
        folding-cell:backSideColor="@android:color/holo_orange_light"
        folding-cell:cameraHeight="60"

        folding-cell:layout_constraintBottom_toBottomOf="parent"
        folding-cell:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/cell_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@raw/test"
                android:text="contetview" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/holo_blue_dark"
                android:src="@raw/test2"
                android:text="title_view" />
        </FrameLayout>
    </com.ramotion.foldingcell.FoldingCell>

</androidx.constraintlayout.widget.ConstraintLayout>